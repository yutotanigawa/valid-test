<div class="row">
	<div class="col-xs-3">

		<% if @book.errors.any? %>
		<ul>
			<h4><%= @book.errors.count %>errors prohibited this user from being saved:</h4>
			<% @book.errors.full_messages.each do |message| %>
			<li><%= message %></li>
			<% end %>
		</ul>
		<% end %>

		<h2>User info</h2>
		<%= render 'users/profile', user: current_user %>
		<!--メモ右側の指定に注意。そこを間違えるとエラーが発生して表示されない -->

		<h2>New book</h2>
		<%= render 'books/newform', book: @book %>
	</div>

	<div class="col-xs-9">
		<h2>Books index</h2>
		<!--books一覧 -->
		<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
					<th></th>
					<th colspan="3">Comment</th>
				</tr>
			</thead>

			<tbody>
				<% @books.each do |book| %>
				<tr>
					<td>
						<%= link_to(book.user) do %>
						<%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %>
						<% end %>
					</td>
					<td><%= link_to book.title, book, class: "book_#{book.id}" %></td>
					<td><%= book.body %></td>
					<td><% if book.favorited_by?(current_user) %>
							<%= link_to book_favorites_path(book), method: :delete do %>
							<%= content_tag :span, "", class: "glyphicon glyphicon-heart" %>
							<%= book.favorites.count %>
							<% end %>
						<% else %>
							<%= link_to book_favorites_path(book), method: :post do %>
							<%= content_tag :span, "", class: "glyphicon glyphicon-heart-empty" %>
							<%= book.favorites.count %>
							<% end %>
						<% end %></td>
						<td>コメント数：<%= book.book_comments.count %></td>
					</tr>
					<% end %>
				</tbody>
			</table>

			<!--books一覧 -->


		</div>
	</div>