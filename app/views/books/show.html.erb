
<div class="row">
	<div class="col-xs-3">



		<h2>User info</h2>
		<%= render 'users/profile' %>

		<h2>New book</h2>
		<%= render 'books/newform' %>

	</div>

	<div class="col-xs-9">
		<h2>Book detail</h2>

		<table class="table">
			<tr>
				<td>
					<%= link_to (@book.user) do %>
					<%= attachment_image_tag(@book.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %><br>
					<%= @book.user.name %>
					<% end %>
				</td>
				<td><%= link_to @book.title, @book %></td>
				<td><%= @book.body %></td>
				<td>コメント数：<%= @book.book_comments.count %></td>
				<% if @book.user == current_user %>
				<td><%= link_to "Edit",edit_book_path(@book), class: "btn-sm btn-success edit_book_#{@book.id}" %></td>
				<td><%= link_to "Destroy",@book, method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{@book.id}" %></td>
				<% end %>
			</tr>
		</table>

		<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th></th>
					<th>name</th>
					<th>date</th>
					<th>comment</th>
					<th colspan="3"></th>
				</tr>
			</thead>
			<tbody>
				<% @book.book_comments.each do |book_comment| %>
				<tr>
					<td>
						<%= link_to(@book.user) do %>
						<%= attachment_image_tag(book_comment.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %>
						<% end %>
					</td>
					<td><a href="#" class="link-author"><%= book_comment.user.name %></a></td>
					<td><%= book_comment.created_at.strftime('%Y/%m/%d') %></td>
					<td><%= book_comment.comment %></td>
						<% if book_comment.user == current_user %>
					<td><%= link_to "Destroy",book_book_comment_path(book_comment),  method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger" %></td>
					    <% end %>
				</tr>
				<% end %>
			</tbody>
		</table>



		<!-- <form class="mt-20"> -->
			<%= form_for [@book, @book_comment] do |f| %>
			<div class="row">
				<div class="col-xs-10">
				<%= f.text_area :comment, rows:'5', class: "form-control",placeholder: "コメントをここに" %>
				</div>
			</div>
			<%= f.submit "送信する" %>
			<% end %>
			<!-- </form> -->

		</div>
</div>

